{
  "name": "tailwind-color-theme-plugin",
  "version": "2.0.0",
  "description": "A reusable Vite plugin for Tailwind 4 theming with dynamic color configuration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "theme.css"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test": "vitest run",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "defu": "^6.1.4",
    "tailwindcss": "^4.1.18",
    "unplugin": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.10",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "vite": "^6.0.0 || ^7.0.0"
  },
  "keywords": [
    "tailwindcss",
    "vite",
    "plugin",
    "theming",
    "css",
    "colors",
    "dark-mode",
    "vue",
    "react",
    "svelte"
  ],
  "author": "Flycro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Flycro/tailwind-color-theme-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Flycro/tailwind-color-theme-plugin/issues"
  },
  "homepage": "https://github.com/Flycro/tailwind-color-theme-plugin#readme"
}
